= link_to 'Додати населений пункт',
  new_settlement_path(@settlement),
  class: %w(btn btn-default)
%table.table
  %thead
    %tr
      %th
        %b Назва
      %th
        %b Тип
      %th
  %tbody
    - @settlements.each do |s|
      %tr
        %td= s.name
        %td= s.kind
        %td
          =link_to 'Редагувати', edit_settlement_path(s)
          =link_to 'Видалити', settlement_path(s), method: :delete
