= link_to 'Додати вулицю',
  new_street_path(@street),
  class: %w(btn btn-default)
%table.table
  %thead
    %tr
      %th
        %b Назва
      %th
        %b Тип
      %th.controls-2
  %tbody
    - @streets.each do |s|
      %tr
        %td= s.name
        %td= s.kind
        %td
          .btn-group{role: "group"}
            = link_to '', edit_street_path(s), class: 'btn btn-default btn-xs glyphicon glyphicon-pencil'
            = link_to '', street_path(s), method: :delete,
              data: { confirm: 'Видалити запис вулиці?' },
              class: 'btn btn-danger btn-xs glyphicon glyphicon-trash'
