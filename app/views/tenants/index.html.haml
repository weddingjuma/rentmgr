%table.table
  %thead
    %tr
      %th Тип
      %th Назва
      %th Код
      %th Адреса
      %th
  %tbody
    - @tenants.each do |t|
      %tr
        %td= t.category
        %td= t.name
        %td= t.code
        %td
          #{t.settlement.name},
          #{t.street.kind} #{t.street.name},
          - if !t.house_number.blank?
            буд. #{t.house_number}
          - if !t.apt_number.blank?
            кв. #{t.apt_number}
        %td
          = link_to '', tenant_path(t), class: 'glyphicon glyphicon-eye-open'
